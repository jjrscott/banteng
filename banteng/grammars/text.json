{
  "rules": {
    "chars": {
      "type": "any",
      "values": [
        {
          "begin": "A",
          "end": "Z",
          "type": "range"
        },
        {
          "begin": "a",
          "end": "z",
          "type": "range"
        },
        " ",
        "!"
      ]
    },
    "line": {
      "type": "all",
      "values": [
        {
          "min": 0,
          "values": "chars"
        },
        {
          "max": 1,
          "min": 0,
          "values": "newline"
        }
      ]
    },
    "lines": {
      "min": 0,
      "values": "line"
    },
    "newline": "\n"
  },
  "syntax": "lines",
  "url": "https://en.wikipedia.org/wiki/Plain_text"
}
